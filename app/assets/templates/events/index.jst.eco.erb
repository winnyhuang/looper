
<div class="vertical_line" style="float:left">
</div>
	
<div id="age" class="large_circle">
	<p>age</p>
	<span>21</span>
</div>

<div class="container">	
	<div id="status">
		<img class="circle_img" src="<%= asset_path( 'max-prf.png' ) %>" />
		<p>You have <font>1 event</font> today </p>
		<div class="circle"><p><a href="#user">></a></p></div>
	
		<div id="grandparents" style="padding-top: 1.5em">
		<img id="p1Toggle" class="circle_img" src="<%= asset_path( 'raul-prf.png' ) %>" />
		<img id="p2Toggle" class="circle_img" src="<%= asset_path( 'tom-prf.png' ) %>" />
		<img id="p3Toggle" class="circle_img" src="<%= asset_path( 'martha-prf.png' ) %>" />
		<img id="p4Toggle" class="circle_img" src="<%= asset_path( 'sarah-prf.png' ) %>" />
		</div>
	</div>
</div>


<div id="date" class="large_circle">
	<p>Dec</p>
	<span>5</span>
</div>

<div id="end_float"></div>

<%% for event in @events.models: %>
	<%% show = event.get('show') %>
	<%% if show: %>
	<%% name = event.get('name') %>
	<%% description = event.get('description') %>
	<%% person = event.get('person') %>
	<%% date = event.get('date') %>
	<%% large_photo = event.get('large_photo') %>
	<%% id = event.get('id') %>
	
<div id="profile" class="circle">
	<img class="circle_img" src=<%%= event.get('person_photo') %> alt="person_photo">
	<p><font> <%%= person %></font></p>
</div>
<div id="end_float"></div>

<div id="time" class="circle">
	<p><p><%%= date.slice(11,13) %></p>
	<span>AM</span></p>
</div>

<div class="end_float"></div>	
	<div class="event_box" id="<%%= id %>">
		<div>
			<a data-toggle="modal" href="https://photos-1.dropbox.com/t/0/AABEmrPsfE5CZ0Mtd7RDsM7PlCWpDeil1Pbwfhmobm-L7A/10/12162130/jpeg/1024x768/2/1354003200/0/2/5877232981_16f5ee4aea_b.jpg/ZLn91qrcuzE5FjSNymUySXA9Obe8HYK_F1JPsdt2V4k" >
				<img id="event_img" class="<%%= name %>" src=<%%= event.get('event_photo') %> alt="event_photo"> 
				<p class="how_to"> click for full screen experience <p>
			</a>
		</div>

		<div class ="event_info">
			<p class="year"><%%= date.slice(0,4) %></p>	
			<p class="experience"><%%= name %></p>	
			<p class="info_origin"><%%= description %></p>


			<div class="chat_space">
				<p>Chat with <%%= person %></p>

				<div class="chat">
					<p> call </p>
				</div>	

				<div class="email">
					<p> email </p>
				</div>

				<div class="email">
					<p> skype </p>
				</div>

				<div class="end_float"></div>
			</div> <!--chat_space-->

		</div> <!--event_info-->
	</div> <!---event_box-->

</div>
<div class="end_float"></div>

	<%% end %>
<%% end %>

<div class="end_float"></div>