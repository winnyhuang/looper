
<div class="vertical_line" style="float:left">
</div>
	
<div id="age" class="large_circle">
	<p>age</p>
	<span>21</span>
</div>

<div class="container">	
	<div id="status" class="1">
		<img class="circle_img" src="<%= asset_path( 'max-prf.png' ) %>" />
		<p>You have <font>1 event</font> today </p>
	</div>
</div>


<div id="date" class="large_circle">
	<p>Dec</p>
	<span>5</span>
</div>

<div id="end_float"></div>
<%% sliderCount = 0 %>
<%% for eventKey, eventList of @events: %>
	<ul id=<%%= 'slider' + sliderCount %> class="bxslider">
	<%% for event in eventList: %>
		<%% show = event.get('show') %>
		<%% if show: %>
		<%% name = event.get('name') %>
		<%% description = event.get('description') %>
		<%% person = event.get('person') %>
		<%% date = event.get('date') %>
		<%% large_photo = event.get('large_photo') %>
		<%% id = event.get('id') %>
		
		<li>
		
		<div id="profile" class="circle">
			<img class="circle_img" src=<%%= event.get('person_photo') %> alt="person_photo">
			<p><font> <%%= person %></font></p>
		</div>
		<div id="end_float"></div>

		<div id="time" class="circle">
			<p><p><%%= date.slice(11,13) %></p>
			<span>AM</span></p>
		</div>

		<div class="end_float"></div>	
			<div class="event_box" id="<%%= id %>">
				<div>
					<a id="single_image" href=<%%= event.get('large_photo') %> title="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.">
						<img id="event_img" class="<%%= name %>" src=<%%= event.get('event_photo') %> alt="event_photo"> 
						<p class="how_to"> click for full screen experience <p>
					</a>
				</div>

				<div class ="event_info">
					<p class="year"><%%= date.slice(0,4) %></p>	
					<p class="experience"><%%= name %></p>	
					<p class="info_origin"><%%= description %></p>


					<div class="chat_space">
						<p>Chat with <%%= person %></p>

						<a href="http://www.google.com/calendar/" target="_blank">
						<div class="chat">
							<p> invite </p>
						</div>
						</a>

						<a href="http://mail.google.com" target="_blank">
						<div class="email">
							<p> email </p>
						</div>
						</a>
						
						<a id="single_image" href="http://i1302.photobucket.com/albums/ag127/nullinference/Looper/contact_skype.png">
						<div class="email">
							<p> skype </p>
						</div>
						</a>
				</div> <!--chat_space-->
						<div class="end_float"></div>
				<div class="related_events">
						<%% if event.get('related_event_1') != null: %>
							
							<img class="<%%= event.get('related_event_1') %>" style="cursor: pointer;position:relative;left:250px;top:-200px;width:200px;height200px;" class="<%%= name %>" src=<%%= event.get('related_photo_1') %> alt="event_photo">
							<p style="position:relative;left:250px;top:-200px;">related event</p>
							
						<%% end %>
						<%% if event.get('related_event_2') != null: %>
							
							<img class="<%%= event.get('related_event_2') %>" style="cursor: pointer;position:relative;left:450px;top:-430px;width:200px;height200px;" class="<%%= name %>" src=<%%= event.get('related_photo_2') %> alt="event_photo">
							<p style="position:relative;left:450px;top:-430px;">related event</p>
						<%% end %>
						<%% if event.get('related_event_3') != null: %>
						
							<img class="<%%= event.get('related_event_3') %>" style="cursor: pointer;position:relative;left:650px;top:-660px;width:200px;height200px;" class="<%%= name %>" src=<%%= event.get('related_photo_3') %> alt="event_photo">
								<p style="position:relative;left:650px;top:-660px;"> related event</p>						
						<%% end %>
				</div> <!--related_events-->

				</div> <!--event_info-->
			</div> <!---event_box-->

		</div>
		<div class="end_float"></div>

		<%% end %>
		</li>
	<%% end %>
	</ul>
	
	<div id=<%%= 'pager' + sliderCount %>>
		<%% eventIndex = 0 %>
		<%% for event in eventList: %>
			<a data-slide-index=<%%= eventIndex %> href=""><img class="slider-photo" src="<%%= event.get('person_photo') %>" /></a>
			<%% eventIndex++ %>
		<%% end %>
	</div>
	<%% sliderCount++ %>
<%% end %>

<div class="end_float"></div>


<script>
	var slider0, slider1, slider2, slider2;
	function loadSlider(){
		slider0 = $('#slider0').bxSlider({
			mode: 'fade',
			pagerCustom: '#pager0'
		});
		slider1 = $('#slider1').bxSlider({
			mode: 'fade',
			pagerCustom: '#pager1'
		});
		slider2 = $('#slider2').bxSlider({
			mode: 'fade',
			pagerCustom: '#pager2'
		});
		slider3 = $('#slider3').bxSlider({
			mode: 'fade',
			pagerCustom: '#pager3'
		});
	}
	
	loadSlider();
	
	for (i=1; i<10; i++){
		var klass = "." + i
		$(klass).on('click', this, function(event){
				var myClass = $(this).attr("class");
				var id = "#" + myClass
				switch(id)
				{
				case '#1':
					slider0.goToSlide(0);
					break;
				case '#2':
					slider1.goToSlide(0);
					break;
				case '#3':
					slider1.goToSlide(1);
					break;
				case '#4':
					slider1.goToSlide(2);
					break;
				case '#5':
					slider1.goToSlide(3);
					break;
				case '#6':
					slider2.goToSlide(0);
					break;
				case '#7':
					slider2.goToSlide(1);
					break;
				case '#8':
					slider2.goToSlide(2);
					break;
				case '#9':
					slider2.goToSlide(3);
					break;
				default:
					break;
				}
				$("html, body").animate({ scrollTop: $(id).offset().top }, 1000);
		});
	}
	$(document).ready(function() {
		$("a#single_image").fancybox({
			'width' : 1000,
			'height' : 1000,
			'padding' : 0,
			'margin' : 0,
			'titlePosition' : 'inside',
		});
	});
	
</script>	

